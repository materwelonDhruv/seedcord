{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "ðŸš€ Launch Watch Mode (Primary)",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["start:watch"],
      "console": "integratedTerminal",
      "restart": true,
      "presentation": {
        "hidden": false,
        "group": "main"
      },
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ðŸ”§ Build & Start Bot",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["start:bot"],
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "secondary"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ðŸ§ª Run Tests",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["test"],
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "secondary"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "ðŸ”— Attach to Process",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/source/app",
      "skipFiles": ["<node_internals>/**"],
      "presentation": {
        "hidden": false,
        "group": "debug"
      }
    }
  ],
  "compounds": [
    {
      "name": "ðŸ”„ Full Development Mode",
      "configurations": ["ðŸš€ Launch Watch Mode (Primary)"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "compounds"
      }
    }
  ]
}
