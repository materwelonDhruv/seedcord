{
    "name": "@seedcord/seedcord",
    "version": "0.1.0",
    "description": "A Discord bot framework built on top of Discord.js",
    "private": true,
    "type": "module",
    "packageManager": "pnpm@10.22.0",
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "lint:fix": "turbo lint:fix",
        "format": "turbo format",
        "format:check": "turbo format:check",
        "tc": "turbo tc",
        "test": "turbo test",
        "lint-staged": "lint-staged",
        "clean": "turbo clean",
        "clean:node": "find . -name node_modules -type d -prune -exec rm -rf '{}' +",
        "turbo:rebuild": "turbo clean && turbo build",
        "turbo:prebuild": "turbo clean && turbo lint && turbo tc",
        "turbo:prune": "turbo prune",
        "turbo:graph": "turbo build --graph",
        "turbo:trace": "turbo build --trace",
        "prepare": "husky",
        "cs": "changeset",
        "cs:publish": "changeset publish",
        "cs:status": "changeset status",
        "release": "pnpm run build && pnpm run cs:publish",
        "prepublishOnly": "pnpm run clean && pnpm run build",
        "bump:deps:pkgs": "for dir in packages/*/; do echo \"Updating $dir...\"; (cd \"$dir\" && pnpm update --latest); done",
        "bump:deps:apps": "for dir in apps/*/; do echo \"Updating $dir...\"; (cd \"$dir\" && pnpm update --latest); done",
        "bump:deps": "pnpm run bump:deps:pkgs && pnpm run bump:deps:apps",
        "docs:extract": "pnpm --filter @seedcord/docs-generator run smoke -o ./debugging/generated -p ./packages",
        "docs:parse": "pnpm --filter @seedcord/docs-engine run smoke ./debugging/generated -o ./debugging/samples",
        "docs:smoke": "pnpm docs:extract && pnpm docs:parse"
    },
    "keywords": [
        "discord",
        "discord.js",
        "bot",
        "framework",
        "oop",
        "typescript"
    ],
    "author": "Dhruv <materwelondhruv@gmail.com>",
    "license": "Apache-2.0",
    "devDependencies": {
        "@changesets/cli": "^2.29.7",
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@seedcord/eslint-config": "workspace:^",
        "@seedcord/tsconfig": "workspace:^",
        "@swc/core": "^1.15.2",
        "@types/chai": "^5.2.3",
        "@types/node": "^24.10.1",
        "@vitest/coverage-v8": "^4.0.10",
        "chai": "^6.2.1",
        "eslint": "catalog:peer",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "nodemon": "^3.1.11",
        "prettier": "catalog:deps",
        "tsup": "^8.5.1",
        "tsx": "^4.20.6",
        "turbo": "^2.6.1",
        "typescript": "catalog:peer",
        "vitest": "^4.0.10"
    },
    "engines": {
        "node": ">=22.12.0"
    }
}
