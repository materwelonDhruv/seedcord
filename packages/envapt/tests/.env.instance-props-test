# Instance Properties Test Environment Variables

# Basic instance properties
INSTANCE_PROP_1=value1
INSTANCE_PROP_2=value2
INSTANCE_PROP_3_TEMPLATED=${INSTANCE_PROP_1}-${INSTANCE_PROP_2}

# Type conversion tests
INSTANCE_NUMBER=42
INSTANCE_FLOAT=3.14159
INSTANCE_BOOLEAN_TRUE=true
INSTANCE_BOOLEAN_FALSE=false
INSTANCE_BIGINT=123456789012345678901234567890
INSTANCE_INTEGER=100

# Array and object tests
INSTANCE_ARRAY=value1,value2,value3
INSTANCE_JSON={"name":"test","version":"1.0.0","features":["auth","api"]}
INSTANCE_URL=https://api.example.com/v1

# Template variable tests
BASE_URL=https://api.example.com
API_VERSION=v2
INSTANCE_FULL_URL=${BASE_URL}/${API_VERSION}/users

# Multiple template variables
SERVICE_NAME=user-service
SERVICE_PORT=3000
SERVICE_ENV=production
INSTANCE_SERVICE_CONFIG=${SERVICE_NAME}:${SERVICE_PORT}@${SERVICE_ENV}

# Fallback tests (these won't exist)
# INSTANCE_MISSING_STRING
# INSTANCE_MISSING_NUMBER
# INSTANCE_MISSING_BOOLEAN

# Edge cases
INSTANCE_EMPTY_STRING=
INSTANCE_WHITESPACE_ONLY="   "
INSTANCE_SPECIAL_CHARS="!@#$%^&*()_+-=[]{}|;:,.<>?"
