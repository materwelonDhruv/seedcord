{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ESNext"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "nodenext",
    "rootDir": "./",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitThis": true,
    "skipLibCheck": true
  }
}
