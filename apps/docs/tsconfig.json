{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../../packages/tsconfig/base.json",
    "compilerOptions": {
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "allowJs": true,
        "jsx": "preserve",
        "rootDir": ".",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"],
            "@components/*": ["./src/components/*"],
            "@ui/*": ["./src/components/ui/*"],
            "@lib/*": ["./src/lib/*"],
            "@store/*": ["./src/store/*"],
            "@styles/*": ["./src/app/*"]
        },
        "incremental": true,
        "esModuleInterop": true
    },
    "include": [
        "next-env.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "tailwind.config.ts",
        "next.config.ts",
        ".next/types/**/*.ts",
        "next.config.ts"
    ],
    "exclude": ["node_modules", "dist"]
}
